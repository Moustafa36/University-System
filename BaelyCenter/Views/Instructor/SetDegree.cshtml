@model BaelyCenter.Models.StudentCourse

@{
    ViewData["Title"] = "SetDegree";
}

<h1>SetDegree</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveDegree" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            
                <input type="hidden" asp-for="Student_Id" class="form-control" />
                <input type="hidden" asp-for="Course_Id" class="form-control" />
               <h3>  @Model.student.Name  </h3>
               <h3>  @Model.Course.Name  </h3>
          
            <div class="form-group">
                <label asp-for="Degree" class="control-label"></label>
                <input asp-for="Degree" class="form-control" />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Degree" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyStudent" asp-route-Id="@Model.Course_Id">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
