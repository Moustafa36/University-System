@model IEnumerable<BaelyCenter.Models.Student>

@{
    ViewData["Title"] = "ShowAll";
}


<h1>ShowAll</h1>

<p>
    <a asp-action="Add" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                Department
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.image)*@
                 <img  src="/image/@item.image" style="width:50px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id">Edit</a>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
               <a asp-action="Delete"  asp-route-id="@item.Id" onclick="ConfirmDel()" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
function ConfirmDel() 
{
    var accept = confirm("are you sure for deleting ");
    if (accept == false) event.preventDefault();
}
</script>